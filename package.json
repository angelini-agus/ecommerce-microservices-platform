{
  "name": "ecommerce-platform",
  "version": "1.0.0",
  "description": "Scalable e-commerce platform with microservices architecture",
  "scripts": {
    "install:all": "./install-deps.sh",
    "docker:up": "docker compose up -d",
    "docker:build": "docker compose up --build -d",
    "docker:down": "docker compose down",
    "docker:logs": "docker compose logs -f",
    "docker:clean": "docker compose down -v --rmi all",
    "migrate": "./run-migrations.sh",
    "seed": "./seed.sh",
    "dev:user": "cd services/user-service && npm run start:dev",
    "dev:product": "cd services/product-service && npm run start:dev",
    "dev:cart": "cd services/cart-service && npm run start:dev",
    "dev:order": "cd services/order-service && npm run start:dev",
    "dev:payment": "cd services/payment-service && npm run start:dev",
    "dev:notification": "cd services/notification-service && npm run start:dev",
    "dev:frontend": "cd frontend && npm run dev",
    "logs:user": "docker compose logs -f user-service",
    "logs:product": "docker compose logs -f product-service",
    "logs:cart": "docker compose logs -f cart-service",
    "logs:order": "docker compose logs -f order-service",
    "logs:payment": "docker compose logs -f payment-service",
    "logs:notification": "docker compose logs -f notification-service",
    "logs:frontend": "docker compose logs -f frontend",
    "logs:postgres": "docker compose logs -f postgres",
    "logs:redis": "docker compose logs -f redis",
    "logs:rabbitmq": "docker compose logs -f rabbitmq",
    "restart:user": "docker compose restart user-service",
    "restart:product": "docker compose restart product-service",
    "restart:cart": "docker compose restart cart-service",
    "restart:order": "docker compose restart order-service",
    "restart:payment": "docker compose restart payment-service",
    "restart:notification": "docker compose restart notification-service",
    "ps": "docker compose ps",
    "db:connect": "docker compose exec postgres psql -U postgres -d ecommerce",
    "redis:cli": "docker compose exec redis redis-cli",
    "rabbitmq:status": "docker compose exec rabbitmq rabbitmqctl status"
  },
  "keywords": [
    "ecommerce",
    "microservices",
    "nestjs",
    "nextjs",
    "docker",
    "typescript"
  ],
  "author": "Your Name",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/ecommerce-platform"
  }
}
